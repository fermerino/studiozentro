{% extends ':custom:base.html.twig' %}

{% block header %} header {% endblock %}

{% block slider %}
    {% include ':custom:slider.html.twig' %}
{% endblock %}

{% block content %}
    <!--content-->
    <div class="content" id="content-down">
        <div class="content-top-top">
            <div class="container">
                <div class="content-mid">
                    <div class="col-md-4 food-grid animated wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="500ms">
                        <div class=" hover-fold">
                            <h4>Cocinas</h4>
                            <div class="top">
                                <div class="front face"></div>
                                <div class="back face">
                                    <p>Diseño totalmente personalizados para tu cocina.</p>
                                </div>
                            </div>
                            <div class="bottom"></div>
                        </div>
                    </div>
                    <div class="col-md-4 food-grid animated wow fadeInLeft" data-wow-duration="1000ms" data-wow-delay="500ms">
                        <div class=" hover-fold">
                            <h4>Electrodomésticos</h4>
                            <div class="top">
                                <div class="front face front1"></div>
                                <div class="back face">
                                    <p>Electrodomésticos de diseño elegantes para cada cocina..</p>
                                </div>
                            </div>
                            <div class="bottom bottom1"></div>
                        </div>
                    </div>
                    <div class="col-md-4 food-grid animated wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="500ms">
                        <div class=" hover-fold">
                            <h4>Reformas</h4>
                            <div class="top">
                                <div class="front face front2"></div>
                                <div class="back face">
                                    <p>Reformamos cualquier parte de hogar para que sea único y acogedor.</p>
                                </div>
                            </div>
                            <div class="bottom bottom2"></div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}